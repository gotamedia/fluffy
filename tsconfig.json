{
    "compilerOptions": {
        "baseUrl": "src",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "module": "esnext",
        "declaration": true,
        "sourceMap": true,
        "target": "es5",
        "moduleResolution": "node",
        "emitDeclarationOnly": false,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "paths": {
            "@root/*": ["./*"],
            "@components/*": ["./components/*"],
            "@contexts/*": ["./contexts/*"],
            "@hooks/*": ["./hooks/*"],
            "@utils/*": ["./utils/*"]
        },
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths"
            },
            {
                "transform": "typescript-plugin-styled-components",
                "type": "config",
                "ssr": true,
                "displayName": true,
                "namespace": "fluffy",
                "componentIdPrefix": "fluffy-"
            }
        ]
    },
    "exclude": [
        "dist",
        "src/icons",
        "node_modules",
        "src/**/*.test.tsx",
        "src/**/*.stories.tsx"
    ]
}